{
  "name": "@cookabl/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:generate": "drizzle-kit generate:sqlite --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@cookabl/email": "file:../email",
    "@cookabl/shared": "file:../shared",
    "@as-integrations/cloudflare-workers": "^1.1.1",
    "@apollo/server": "^4.11.0",
    "drizzle-orm": "^0.38.2",
    "graphql": "^16.10.0",
    "hono": "^4.6.15",
    "lucia": "^3.2.0",
    "resend": "^4.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "drizzle-kit": "^0.30.4",
    "typescript": "^5.7.3",
    "wrangler": "^3.107.3"
  }
}
